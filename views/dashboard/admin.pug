extends ../layout
block content
    //- stats ------------------------------------------------------------------------
    div.row.g-4.mb-4
        div.col-6.col-lg-3
            div.app-card.app-card-stat.shadow-sm.h-100
                div.app-card-body.p-3.p-lg-4
                    h4.stats-type.mb-1 Total Properties
                    div.stats-figure=stats.totalProperties
                a.app-card-link-mask(href="/properties?lang=en")
        div.col-6.col-lg-3
            div.app-card.app-card-stat.shadow-sm.h-100
                div.app-card-body.p-3.p-lg-4
                    h4.stats-type.mb-1 Today Developers
                    div.stats-figure=stats.totalDevelopers
                a.app-card-link-mask(href="/basic-setup/developer-type?lang=en")
        div.col-6.col-lg-3
            div.app-card.app-card-stat.shadow-sm.h-100
                div.app-card-body.p-3.p-lg-4
                    h4.stats-type.mb-1 Total Areas
                    div.stats-figure=stats.totalAreas
                a.app-card-link-mask(href="/basic-setup/property-area?lang=en")
        div.col-6.col-lg-3
            div.app-card.app-card-stat.shadow-sm.h-100
                div.app-card-body.p-3.p-lg-4
                    h4.stats-type.mb-1 Total Users
                    div.stats-figure=stats.total_users
                a.app-card-link-mask(href="#")
                
    //- chart ------------------------------------------------------------------------
    .row.g-4.mb-4
        .col-12.col-lg-12
            .app-card.app-card-chart.h-100.shadow-sm
                .app-card-header.p-3
                    .row.justify-content-between.align-items-center
                        .col-auto
                            h4.app-card-title User Engagement Statistics
                        .col-auto
                            .card-header-action
                                a(href="#") Last 7 days data till today
                .app-card-body.p-3.p-lg-4
                    .mb-3.d-flex
                        select.form-select.form-select-sm.ms-auto.d-inline-flex.w-auto
                            option(value="1", selected) This week
                            option(value="2") Last week
                    .chart-container
                        canvas#canvas-barchart

block script
    script(src="/plugins/chart.js/chart.min.js")
    script(src="/js/index-charts.js")